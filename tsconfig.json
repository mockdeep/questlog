{
  "//": {
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedParameters": true
  },
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "baseUrl": ".",
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2021", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "paths": {
      "src/*": ["app/javascript/src/*"],
      "helpers": ["app/javascript/helpers/index.ts"],
      "helpers/*": ["app/javascript/helpers/*"],
      "_test_helpers/*": ["spec/javascript/_test_helpers/*"],
      "channels/*": ["app/javascript/channels/*"],
      "controllers/*": ["app/javascript/controllers/*"],
      "javascript/*": ["./app/javascript/*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "jsx": "react-jsx",
    "skipLibCheck": true
  },
  "exclude": [
    "app/assets/builds",
    "coverage",
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}
