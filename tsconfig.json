{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES6",
      "ES7",
      "ES2017"
    ],
    "module": "ES6",
    "moduleResolution": "node",
    "paths": {"*": ["app/javascript/*"]},
    "sourceMap": true,
    "target": "ES6",
    "jsx": "react"
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}
