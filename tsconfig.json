{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es2017", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "paths": {
      "src/*": ["app/javascript/src/*"]
    },
    "sourceMap": true,
    "target": "es5",
    "jsx": "react"
  },
  "exclude": [
    "spec",
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}
