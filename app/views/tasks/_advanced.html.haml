- if current_user.contexts.any?
  = render 'contexts/choose', contexts: contexts, task: task
- if task
  = render task
  #edit-form
    = render 'tasks/form', new_task: task, namespace: 'edit', contexts: contexts
#new-form
  = render 'tasks/form', new_task: new_task, namespace: 'new', contexts: contexts
