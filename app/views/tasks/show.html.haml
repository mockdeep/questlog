- if current_user.contexts.any?
  = render 'contexts/choose', contexts: @contexts, task: @task
- if @task
  = render @task
  #edit-form
    = render 'tasks/form', task: @task, namespace: 'edit', contexts: @contexts
#new-form
  = render 'tasks/form', task: @new_task, namespace: 'new', contexts: @contexts

%p
  = link_to('All my tasks', tasks_path)
  |
  = link_to('Add multiple tasks', new_bulk_task_path)
  |
  = render 'help_modal'
  %br
  Try adding a tag using '#', for example: <strong>#at-home</strong>. Click
  = link_to 'Help', '#tips-modal', data: { toggle: 'modal' }
  for more.
