= form_for(quickie_form) do |form|
  .row-fluid
    .span12
      - if quickie_form.errors.any?
        = render 'common/errors', record: quickie_form
  .row-fluid
    .span6
      = form.text_field :title, class: 'span12', id: "#{namespace}_title"
    .span6
      = form.submit class: 'btn btn-success btn-block'
