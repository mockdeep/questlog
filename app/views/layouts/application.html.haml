!!!
%html
  %head
    %title Quickies
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}/

  %body
    .container-fluid
      .row-fluid
        .navbar
          %h1#quickies= link_to('QUICKIES', root_path)
          %br
          = link_to("What's a Quickie?", what_path)

          #user_nav
            - if current_user
              Logged in as #{current_user.email}
              = link_to "Log out", session_path, method: :destroy
            - else
              = link_to "Sign up", new_user_path
              or
              = link_to "Log in", new_session_path
          - if current_user
            = link_to("Switch to #{current_user.other_mode} view",
                user_path(current_user, user: { mode: current_user.other_mode }),
                method: :put)
      .row-fluid
        - flash.each do |name, msg|
          = content_tag :div, msg, id: "flash#{name}"

      = yield
