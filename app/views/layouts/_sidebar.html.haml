.sidebar.sidebar--visible{ data: { layout_target: 'expandedSidebar' } }
  %h2.sidebar__header
    Menu
    - data = { action: 'layout#hideSidebar' }
    %button.sidebar__toggle.sidebar__toggle--visible{ data: data }
      %i.fas.fa-bars
  %hr.sidebar__divider/
  %h2= active_link_to('FOCUS', root_path, class: 'sidebar__link')
  %h2= active_link_to('ALL TASKS', tasks_path, class: 'sidebar__link')
  %h2= active_link_to('TIMEFRAMES', timeframes_path, class: 'sidebar__link')

.sidebar.sidebar--hidden.hide-me{ data: { layout_target: 'collapsedSidebar' } }
  - data = { action: 'layout#showSidebar' }
  %button.sidebar__toggle.sidebar__toggle--hidden{ data: data }
    %i.fas.fa-bars
