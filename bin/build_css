#!/usr/bin/env bash

set -euo pipefail

if [ "${RAILS_ENV:-}" = "production" ]; then
  MINIFY="--minify"
fi

pnpm esbuild app/assets/stylesheets/application.css \
  --bundle \
  --outfile=app/assets/builds/application.css \
  --loader:.woff2=copy \
  --loader:.ttf=copy \
  --loader:.woff=empty \
  --loader:.eot=empty \
  --loader:.svg=empty \
  ${MINIFY:-} \
  "$@"
